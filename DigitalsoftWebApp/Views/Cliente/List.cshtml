@using api.digitalsoftec.net.Model;
@model List<BusinessLayerVentasClientesDTOClienteDTO>
@{
    ViewData["Title"] = "Clientes";
}
<!DOCTYPE html>
<html>
<head>
    <title>Botón crear</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>
<body>
    <div class="row" style="margin-left: 110px; margin-top: 80px;">
        <div class="col">
            <h3>Lista Clientes</h3>
        </div>
    </div>
    <div class="row" style="margin-left: 550px; margin-top: 80px; text-align: right">
        <div class="col">
            <button type="button" class="btn btn-primary" onclick="location.href = '@Url.Action("Create", "Cliente")'">Crear</button>
        </div>
    </div>
</body>
</html>
<hr></hr>

<div style="margin: 20px auto; max-width: 80%;">
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nro. Identifación</th>
                <th>Nombre</th>
                <th>Fecha de Nacimiento</th>
                <th>Dirección</th>
                <th>Móvil</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.persona_id</td>
                    <td>@cliente.persona_nro_identificacion</td>
                    <td><a href="@Url.Action("Edit", "Cliente", new { id = cliente.persona_id })">@cliente.persona_apellidos&nbsp;@cliente.persona_nombres</a></td>
                    <td>@cliente.persona_fecha_nacimiento</td>
                    <td>@cliente.cliente_direccion</td>
                    <td>@cliente.cliente_movil</td>
                    <td>@cliente.cliente_email</td>
                    <td>
                        <button type="button" class="btn btn-light btn-xs" onclick="location.href = '@Url.Action("Eliminar", "Cliente", new { id = cliente.persona_id })'">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                            </svg>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>