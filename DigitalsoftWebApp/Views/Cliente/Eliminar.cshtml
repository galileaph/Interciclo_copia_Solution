<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Clientes - Eliminación</h5>
        <form asp-action="Eliminar" asp-route-id="@Model.persona_id" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <h5>¿Desea eliminar el cliente @Model.persona_nombres + " " + @Model.persona_apellidos?</h5>
            </div>
            <input asp-for="persona_id" class="form-control form-control-xs">
            <div class="row" style="display: flex; text-align: right">
                <div class="col">
                    <a asp-action="list" class="btn btn-secondary">No</a>
                    <button type="submit" class="btn btn-primary" id="Guardar">Si</button>
                </div>

            </div>
        </form>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div id="successMessage" class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}


<script>
    document.addEventListener('DOMContentLoaded', function () {
        var btnSubmit = document.getElementById('Guardar');
        var modal = document.getElementById('loadingModal');

        btnSubmit.addEventListener('click', function () {
            modal.style.display = 'block';
        });
    });


</script>
